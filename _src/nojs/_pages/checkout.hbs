title: Register
pageclass: nojs interior register-nojs
---

{{> nav }}

<div id='content'>
  <div class='row'>
  <div class='small-10 small-offset-1 columns'>
  <h1>Register Below</h1>
  </div>
  </div>
  <div class='row'>
  <form class='small-10 small-offset-1 columns'>

    <div class="row">
      <div class="large-12 columns">
        <label>Name
          <input type="text" placeholder="Name" />
        </label>
      </div>
    </div>

    <div class="row">
      <div class="large-6 columns">
        <label>Email 
          <input type="email" name="email" required placeholder="Valid Email" />
        </label>
      </div>
      <div class="large-6 columns">
        <label>Phone #
          <input type="text" placeholder="Valid Phone" />
        </label>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <label>Home Phone #
          <input type="text" placeholder="Home Phone #" />
        </label>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <label>Address
          <input type="text" placeholder="Address" />
        </label>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <label>Address 2
          <input type="text" placeholder="Address 2" />
        </label>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <label>City
          <input type="text" placeholder="City" />
        </label>
      </div>
    </div>
    <div class="row">
      <div class="large-6 columns">
        <label>State
          <input type="text" placeholder="State" />
        </label>
      </div>
      <div class="large-6 columns">
        <label>Zip Code
          <input type="text" placeholder="Zip Code" />
        </label>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <label>Number Attending With You
          <input type="text" placeholder="Number Attending With You" />
        </label>
      </div>
    </div>
    <div class="row">
      <div class='medium-3 columns right'>
          <input type="submit" class='button' placeholder="Submit" />
      </div>
    </div>
  </form>
  </div>
</div>
